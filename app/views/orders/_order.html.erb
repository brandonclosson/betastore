<table class="table table-striped table-cart table-curved">
  <thead>
    <tr>
      <th><span class="glyphicon glyphicon-camera big-glyph"></span></th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |li| %>
      <tr>
        <td><%= image_tag li.product.image_url, height: 50 %></td>
        <td><%= li.product.name %></td>
        <td><%= li.quantity %></td>
        <td><%= li.product.price %></td>
        <td><%= li.subtotal %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="4"></td>
      <td>Total: <%= @order.total_amount %></td>
    </tr>
  </tbody>
</table>