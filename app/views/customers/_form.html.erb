<%= form_for @customer, url: signup_path, html: { class: 'form-horizontal', role: 'form'} do |f| %>

  <div class="control-group">
    <%= f.text_field :first_name, class: 'span4', placeholder: 'First Name' %>
  </div>

  <div class="control-group">
    <%= f.text_field :last_name, class: 'span4', placeholder: 'Last Name' %>
  </div>

  <div class="control-group">
    <%= f.text_field :email, class: 'span4', placeholder: 'Email' %>
  </div>

  <div class="control-group">
    <%= f.password_field :password, class: 'span4', placeholder: 'Password' %>
  </div>

  <div class="control-group">
    <%= f.password_field :password_confirmation, class: 'span4', placeholder: 'Confirm Password' %>
  </div>

  <div class="control-group">
    <%= f.submit "Sign Up", class: 'btn btn-success' %>
  </div>

<% end %>