<%= form_for @customer, url: signup_path, html: { class: 'span3 well', role: 'form'} do |f| %>

  <div class="form-group">
    <%= f.label :first_name, class: 'control-label' %>
    <div>
      <%= f.text_field :first_name, class: 'span3' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <div>
      <%= f.text_field :last_name, class: 'span3' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <div>
      <%= f.text_field :email, class: 'span3' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div>
      <%= f.text_field :password, class: 'span3' %>
    </div>
  </div>
  
  <div class="form-group">
    <div>
      <%= f.submit "Sign Up", class: 'btn btn-success' %>
    </div>
  </div>

<% end %>