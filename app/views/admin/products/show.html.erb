<ol class="breadcrumb">
  <li><%= link_to "Products", admin_products_path %></li>
  <li class="active"><%= @product.name %></li>
</ol>

<div>
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Created At</th>
    </tr>
    <tr>
      <td><%= @product.id %></td>
      <td><%= @product.name %></td>
      <td><%= number_to_currency @product.price %></td>
      <td><%= image_tag @product.image_url, 
                alt: @product.image_url,  
                width: 80,
                height: 80 %></td>
      <td><%= @product.created_at %></td>
    </tr>
  </table>

  <%= link_to "Edit", edit_admin_product_path(@product), class: 'btn btn-primary' %>
  <%= link_to "Delete", admin_product_path(@product), method: 'delete',  data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
</div>